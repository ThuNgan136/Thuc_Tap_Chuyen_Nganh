<section class="contact-page">
    <div class="container py-5">
        <div class="row g-4 align-items-center">
            <div style="max-width:420px; margin:auto; padding:24px; border-radius:12px; box-shadow:0 0 12px rgba(0,0,0,0.1);">
                <h2 style="text-align:center; margin-top:0; color:#1c1717;">SIGN UP</h2>
                <p style="text-align:center; color:#666;">WELCOME TO NFLOWERS</p>
                <form>


                    <label>Full name</label><br>
                    <input type="text" required
                           style="width:100%; padding:10px; margin:6px 0 14px; border:1px solid #ccc; border-radius:6px;">


                    <label>Email</label><br>
                    <input type="email" required
                           style="width:100%; padding:10px; margin:6px 0 14px; border:1px solid #ccc; border-radius:6px;">


                    <label>Phone number</label><br>
                    <input type="tel" required
                           style="width:100%; padding:10px; margin:6px 0 14px; border:1px solid #ccc; border-radius:6px;">


                    <label>Password</label><br>
                    <input type="password" required
                           style="width:100%; padding:10px; margin:6px 0 14px; border:1px solid #ccc; border-radius:6px;">


                    <label>Please re-enter your password!</label><br>
                    <input type="password" required
                           style="width:100%; padding:10px; margin:6px 0 20px; border:1px solid #ccc; border-radius:6px;">


                    <button style="width:100%; background:#1c1717; color:white; padding:12px; border:none; border-radius:8px; font-size:16px; font-weight:bold; cursor:pointer;">
                        Sign up
                    </button>


                    <p style="text-align:center; margin-top:14px; color:#666;">
                        You already have an account?
                        <a href="/login" style="color:#1c1717; font-weight:bold; text-decoration:none;">Login</a>
                    </p>


                </form>
            </div>
        </div>
    </div>
</section>
